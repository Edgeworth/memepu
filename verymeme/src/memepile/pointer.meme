impl<T> BinaryArith<*T, u32> for *T {
  fn add(o: *u32) *T {
    ret *this + *T(*o);
  }
}

impl<T> UnaryArith<*T> for *T {
  fn postinc() *T {
    tmp := *this;
    *this = *this + sizeof(**this);
    ret tmp;
  }
}

impl<I, T> Indexable<I, *T> for *T {
  fn index(idx: *I) *T {
    ret *this + *T(*idx * sizeof(**this));
  }
}
